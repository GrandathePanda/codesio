<section id="torch-toolbar">
  <div class="torch-container">
    <%= link "Cancel", to: admin_snippet_path(@conn, :index), class: "torch-button" %>
  </div>
</section>

<section id="torch-header-and-content">
  <div class="torch-container">
    <div class="header">
      <h3>Edit Snippet</h3>
    </div>
    <%= render "form.html", Map.put(assigns, :action, admin_snippet_path(@conn, :update, @snippet)) %>
  </div>
</section>
